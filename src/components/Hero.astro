---
import Button from "./Button.astro";
import { Image } from '@astrojs/image';
import cedarShake from '../assets/cedarShake.jpg';
---

<header class="">
  <div class="content-wrap grid-md">
    <p class="txt-primary txt-bold">BBB A+ Rated with a 2-year Warranty</p>
    <h1 class="h1 leading-2">#1 Painters Kansas City</h1>
    <p class="width-sm center mb-8">
      Your Professional Painters In Kansas City With The Quality You Deserve
      At A Price You Can Afford.
    </p>
    <Button text="Request A Free Service Estimate" link="#" style="primary" />
  </div>
  <!-- <img src="/cedar-shake.jpg" alt="" srcset=""> -->
  <Image src={cedarShake} width={1200} />

</header>


<style lang="scss">
  $height: 80vh;
  $max-height: 1500px;

  header {
    display: grid;
    grid-template-areas: "hero";
    color: hsl(var(--white));

    >* {
      grid-area: hero;
    }

    height: $height;
    max-height: $max-height;
    place-items: center;
    background: linear-gradient(180deg,
      hsl(0deg 0% 0% / .8) 0%,
      hsl(0deg 0% 0% / .8) 16%,
      hsl(0deg 0% 0% / .8) 24%,
      hsl(0deg 0% 0% / .7) 30%,
      hsl(0deg 0% 0% / .7) 35%,
      hsl(0deg 0% 0% / .7) 40%,
      hsl(0deg 0% 0% / .7) 45%,
      hsl(0deg 0% 0% / .6) 50%,
      hsl(0deg 0% 0% / .6) 55%,
      hsl(0deg 0% 0% / .6) 60%,
      hsl(0deg 0% 0% / .5) 65%,
      hsl(0deg 0% 0% / .5) 70%,
      hsl(0deg 0% 0% / .4) 76%,
      hsl(0deg 0% 0% / .4) 84%,
      hsl(0deg 0% 0% / .4) 100%);

    img {
      z-index: -1;
      object-fit: cover;
      object-position: top;
      height: min($height, $max-height);
      width: 100%;
    }

    div > p:nth-child(3) {
      font-size: var(--size-6);
      font-weight: var(--font-weight-3);
    }
  }

</style>
