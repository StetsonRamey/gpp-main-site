<style lang="scss">
  .company {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .footer-social {
    display: flex;
  }
  .blog-link {
    display: block;
    text-align: center;
  }
  /* FOOTER */
  footer {
    background-color: hsl(var(--footer-accent));
    color: hsl(var(--white));
    display: flex;
    flex-direction: column;
  }
  footer ul {
    margin: 0;
    padding: 0;
    --flow-space: 0.75em;
  }
  .footerNav-wrapper {
    padding-block: var(--size-fluid-5);
    padding-inline: var(--size-fluid-4);
    flex-grow: 1;
  }
  .links {
    --flow-space: 2em;
  }
  .nav-links,
  .nav-wrapper {
    display: flex;
    align-items: center;
  }
  .footer-services,
  .footer-areas {
    max-width: fit-content;
    margin-inline: auto;
  }
  .service-links {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--size-4);
    justify-items: start;
    a {
      display: block;
    }
  }
  .service-areas {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--size-4);
    justify-items: start;
    a {
      display: block;
      text-align: center;
    }
  }
  .footer-banner {
    background-color: hsl(var(--footer-dark));
    height: var(--size-8);
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--size-2);
  }
  footer a {
    color: hsl(var(--white));
    text-decoration: none;
    font-weight: var(--font-weight-3);
  }
  footer a:hover {
    color: hsl(var(--brand-yellow));
  }
  .brand-copy {
    max-width: 50ch;
    margin-inline: auto;
    padding-top: var(--size-fluid-3);
    padding-bottom: var(--size-fluid-3);
  }
  .footer-block h3 {
    text-align: center;
    color: hsl(var(--white));
    margin-bottom: var(--size-7);
    font-size: var(--font-size-4);
    white-space: nowrap;
  }
  .footer-contact > div {
    display: flex;
    align-items: center;
    padding-bottom: var(--size-3);
  }

  .footer-contact svg {
    margin-right: var(--size-3);
  }

  /* MEDIA QUERIES */
  @media (min-width: 1200px) {
    /* FOOTER */
    footer a {
      font-weight: var(--font-weight-5);
    }

    .footer-services a,
    .footer-areas a {
      text-transform: capitalize;
    }

    .footer-services ul,
    .footer-areas ul {
      columns: 2;
      max-width: 17rem;
    }

    .footer-contact {
      width: fit-content;
      margin-inline: auto;
    }

    .footer-contact a {
      font-size: 0.75em;
      padding-right: var(--size-fluid-4);
    }

    .footerNav-wrapper {
      padding-inline: var(--size-fluid-6);
      padding-top: var(--size-fluid-6);
      padding-bottom: var(--size-fluid-3);
    }

    .links {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      gap: var(--size-fluid-3);
    }

    .footer-block h3 {
      text-align: start;
    }
    .blog-link {
      text-align: start;
    }
  }
</style>
